[app]

# Nombre de tu aplicación
title = MiAplicacion

# Nombre del paquete (normalmente en formato de dominio inverso)
package.name = miaplicacion

# Dominio del paquete
package.domain = com.miempresa

# Directorio de origen donde están tus archivos .py (cambia '.' si tus archivos no están en la raíz)
source.dir = .

# El archivo principal a ejecutar
source.main = main.py

# Extensiones a incluir en la compilación
source.include_exts = py,png,jpg,kv,atlas

# Modo ventana o pantalla completa
fullscreen = 0

# Versión de tu aplicación
version = 0.1

# SDK mínimo requerido
android.api = 29

# Arquitectura soportada
android.arch = arm64-v8a

[buildozer]

# Directorio donde se encuentran los archivos fuente
build_dir = ./build
